<form data-on-submit="ev/cancel-submit">
  <div class="content">
    <div class="row">
      <input type="hidden" name="id" value="{{id}}">
      <input type="hidden" name="type" value="{{type}}">
      <input type="hidden" name="mode" value="{{mode}}">
      <div class="col-2-4">
        <label class="{{#if name}}has-input{{/if}}">
          Name
          <input type="text" name="name" placeholder="Name" value="{{name}}">
        </label>
      </div>
    </div>
  </div>
  <footer>
    <button class="flat" type="button" data-on-click="ev/submit-edit-element">Guardar</button>
    {{#if mode '==' 'edit'}}
      <div>
        <i class="hover-color cursor-pointer fa fa-trash" data-on-click="ev/submit-delete-element"></i>
      </div>
    {{/if}}
  </footer>
</form>